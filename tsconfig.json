{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "ng2-image-viewer": [
        "dist/ng2-image-viewer"
      ],
      "ng2-image-viewer/*": [
        "dist/ng2-image-viewer/*"
      ]
    },
    "useDefineForClassFields": false
  }
}
